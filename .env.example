# Jarvis AI Assistant Environment Configuration
# Copy this file to .env and customize your settings

# =============================================================================
# API KEYS AND CREDENTIALS
# =============================================================================

# Google Generative AI (Gemini) API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_google_api_key_here

# OpenAI API Key (optional, for alternative LLM backend)
OPENAI_API_KEY=your_openai_api_key_here

# Porcupine Wake Word API Key (optional, for advanced wake word detection)
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here

# =============================================================================
# VOICE ASSISTANT CONFIGURATION
# =============================================================================

# Persona Configuration
JARVIS_PERSONA_NAME=Jarvis
JARVIS_WAKE_WORD=jarvis
JARVIS_REQUIRE_WAKE_WORD=true

# Speech Recognition Backend
# Options: speech_recognition, faster_whisper
ASR_BACKEND=faster_whisper
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# Text-to-Speech Backend
# Options: edge_tts, sapi, gtts
TTS_BACKEND=edge_tts
TTS_VOICE=en-US-GuyNeural
TTS_RATE=+0%
TTS_PITCH=+0Hz

# Wake Word Detection Backend
# Options: openwakeword, porcupine, none
WAKE_WORD_BACKEND=openwakeword

# =============================================================================
# VISION AND AI MODELS
# =============================================================================

# Object Detection Model
VISION_MODEL_PATH=models/yolov8n.onnx
VISION_CONFIDENCE_THRESHOLD=0.5
ENABLE_OBJECT_DETECTION=true

# Sketch Recognition
ENABLE_SKETCH_RECOGNITION=false
SKETCH_MODEL_PATH=models/sketch_classifier.onnx

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Camera Settings
CAMERA_INDEX=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# Hand Tracking
MAX_HANDS=1
HAND_DETECTION_CONFIDENCE=0.8
HAND_TRACKING_CONFIDENCE=0.7

# Gesture Thresholds
PINCH_THRESHOLD=0.04
POINT_THRESHOLD=0.03
HOVER_TIME=2.0

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Memory Management
MAX_MEMORY_ENTRIES=100
TTS_CACHE_SIZE=50
MAX_AUDIO_QUEUE=10

# Processing
ENABLE_GPU_ACCELERATION=false
MODEL_QUANTIZATION=true
BATCH_PROCESSING=false

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
ENABLE_GESTURE_LOGGING=false
ENABLE_PERFORMANCE_METRICS=true
ENABLE_DEBUG_MODE=false

# Log Files
LOG_DIR=logs
GESTURE_LOG_FILE=gesture_events.jsonl
PERFORMANCE_LOG_FILE=performance_metrics.json

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
ENABLE_VOICE_ASSISTANT=true
ENABLE_CAMERA_MODULE=true
ENABLE_CANVAS_MODULE=true

# Advanced Features
ENABLE_CONTEXT_MONITORING=true
ENABLE_MEMORY_PERSISTENCE=true
ENABLE_SYSTEM_CONTROL=true
ENABLE_WEB_INTEGRATION=true

# Experimental Features
ENABLE_CONTINUOUS_LISTENING=false
ENABLE_GESTURE_PREDICTION=false
ENABLE_EMOTION_DETECTION=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Rate Limiting
API_RATE_LIMIT=60
API_TIMEOUT=30

# Privacy Settings
ENABLE_TELEMETRY=false
SAVE_AUDIO_RECORDINGS=false
SAVE_VIDEO_RECORDINGS=false

# Optional: Proxy if needed
# HTTP_PROXY=
# HTTPS_PROXY=

# =============================================================================
# PLATFORM SPECIFIC SETTINGS
# =============================================================================

# Windows Specific
ENABLE_SAPI_TTS=true
ENABLE_WINDOWS_NOTIFICATIONS=true

# Linux Specific
ENABLE_PULSEAUDIO=false
ENABLE_ALSA=true

# macOS Specific
ENABLE_COREAUDIO=false
ENABLE_MACOS_NOTIFICATIONS=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEV_MODE=false
MOCK_HARDWARE=false
ENABLE_HOT_RELOAD=false

# Testing
RUN_HEALTH_CHECKS=true
ENABLE_UNIT_TESTS=false
ENABLE_INTEGRATION_TESTS=false

# Profiling
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=profiles

